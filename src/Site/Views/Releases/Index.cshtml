@model RimDev.Releases.ViewModels.Releases.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-8">
        @foreach(var release in Model.Releases) {
            <div class="row">
                <div class="col-md-12">
                    <h2>@release.Description</h2>
                    <h3>release date : @release.CreatedAt</h3>
                    <hr/>
                    <div>
                        @await Html.MarkdownAsync(release.FullName, release.Body)
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        @Html.Partial("_repositories", new GitHubRepository())
    </div>
</div>